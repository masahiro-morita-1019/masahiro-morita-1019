{
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "max-ten": {
        "max": 3
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      },
      "ja-no-abusage": true,
      "ja-no-successive-word": true,
      "ja-no-mixed-period": true,
      "ja-unnatural-alphabet": true
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "spellcheck-tech-word": true
  }
}